{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173/",
      "preLaunchTask": "serve",
      "postDebugTask": "kill",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:5173/",
      "preLaunchTask": "serve",
      "postDebugTask": "kill",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "webRoot": "${workspaceFolder}",
      "pathMappings": [{ "url": "http://localhost:5173/src", "path": "${webRoot}/src" }],
      "profile": "default-release"
    }
  ]
}
