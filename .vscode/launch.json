{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "internalConsoleOptions": "openOnSessionStart",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}",
        "pattern": "http://localhost:([0-9]+)",
        "killOnServerStop": true
      }
    }
  ]
}
