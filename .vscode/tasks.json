{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve",
      "command": "pnpm",
      "args": ["dev"],
      "isBackground": true,
      "presentation": { "reveal": "silent", "close": true },
      "problemMatcher": [
        {
          "pattern": { "regexp": ".", "file": 1, "location": 2 },
          "background": { "beginsPattern": ".", "endsPattern": "." }
        }
      ]
    },
    {
      "label": "kill",
      "command": "echo ${input:terminate}"
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
